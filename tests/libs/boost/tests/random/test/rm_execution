}

@test "[$PKG] test_random_device under resource manager ($rm/$LMOD_FAMILY_COMPILER/$LMOD_FAMILY_MPI)" {
    test=test_random_device
    if [ ! -x $test ];then
        flunk "$test does not exist"
    fi
    run_serial_binary ./$test
