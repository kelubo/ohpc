}

@test "[$PKG] test_random_number_generator under resource manager ($rm/$LMOD_FAMILY_COMPILER/$LMOD_FAMILY_MPI)" {
    test=test_random_number_generator
    if [ ! -x $test ];then
        flunk "$test does not exist"
